
.result-container{
  width:100%;
  height: 100%;
  
}
.bg-img{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 0;
}
.bg-img image{
  width: 100%;
  height: 130%;
}
.weui-flex{
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  align-items: center;
  position: relative;
  z-index: 100;
  margin:0 auto;
}
.weui-flex-title{
  color: #fff;
  font-weight: bold;
}
.weui-flex__item{
  border: 1rpx solid #ddd;
  width:400rpx;
  height: 400rpx;
  border-radius: 1px solid #ddd;
}
.weui-flex__item image{
    width:400rpx;
    height: 400rpx;
}

.origin-img{
  width: 400rpx;
  height: 400rpx;
}
.main-left{
  width: 100%;
  height: 100%;
}

.sharebutton{
  width: 70%;
  margin: 10px auto;
  color:#00ffcc;
  outline:none;
}
.sharebutton button{
  border-radius: 30rpx;
}
.btn-bg{
  display: block; 
  width: 100%;
  
  background-color: #00ffcc;
  color:#fff;
}

.edit-footer{
  margin-top:30px;
}
.sharebutton button{
  border: none;
  padding:0;
}

/* pages/result.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
