@import 'weui.wxss';
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}


.userinfo-avatar {
  width: 168rpx;
  height: 168rpx;
  margin-top: 124rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 30rpx; 
  color: #585858;
  font-family: Songti SC;
  font-size: 32rpx;
}